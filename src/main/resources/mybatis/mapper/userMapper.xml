<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.dao.IUserDao">
    <sql id="BASE_TABLE">
    usr
  </sql>

    <sql id="BASE_COLUMN">
    userId,userName,psw,tel,userDesc
  </sql>

    <insert id="insert" parameterType="com.example.demo.vo.User">
        INSERT INTO
        <include refid="BASE_TABLE"/>
        <trim prefix="(" suffix=")" suffixOverrides=",">
            userName,psw,
            <if test="tel != null">
                tel,
            </if>
        </trim>
        <trim prefix="VALUES(" suffix=")" suffixOverrides=",">
            #{userName, jdbcType=VARCHAR},#{psw, jdbcType=VARCHAR},
            <if test="tel != null">
                #{phone, jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>

    <select id="selectUsers" resultType="com.example.demo.vo.User">
        SELECT
        <include refid="BASE_COLUMN"/>
        FROM
        <include refid="BASE_TABLE"/>
    </select>

    <select id="selectUserByName" resultType="com.example.demo.vo.User">
        SELECT
        <include refid="BASE_COLUMN"/>
        FROM
        <include refid="BASE_TABLE"/>
        where userName = #{userName,jdbcType=VARCHAR}
    </select>

</mapper>